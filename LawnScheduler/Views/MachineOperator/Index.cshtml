<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Assigned Bookings</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        h2 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            color: #0d6efd;
            margin: 20px 0;
        }

        .table {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .table th {
                background-color: #198754;
                color: white;
                font-weight: bold;
                text-align: center;
            }

            .table td {
                text-align: center;
                vertical-align: middle;
            }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

            .btn-primary:hover {
                background-color: #004085;
            }

        .btn-info {
            background-color: #0dcaf0;
            border: none;
        }

            .btn-info:hover {
                background-color: #0a9fc7;
            }

        .btn-success {
            background-color: #198754;
            border: none;
        }

            .btn-success:hover {
                background-color: #146c43;
            }

        .nav {
            background-color: #e9ecef;
            padding: 10px;
            border-radius: 0.5rem;
        }

        .nav-link {
            color: #0d6efd !important;
            font-weight: 600;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .text-right {
            text-align: right;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <!-- Navigation Links -->
        <ul class="nav justify-content-center mb-4">
            <li class="nav-item">
                <a class="nav-link" asp-controller="MachineOperator" asp-action="Index">
                    Assigned Bookings
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="MachineOperator" asp-action="RegisterMachine">
                    Register Machine
                </a>
            </li>
        </ul>

        <!-- Page Title -->
        <h2>Assigned Bookings</h2>

        <!-- Add Machine Button -->
        <div class="text-right mb-3">
            <a asp-controller="MachineOperator" asp-action="RegisterMachine" class="btn btn-primary">
                Add Machine
            </a>
        </div>

        <!-- Bookings Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Customer Email</th>
                        <th>Machine Name</th>
                        <th>Scheduled Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@ViewBag.CustomerEmails[booking.CustomerId]</td>
                            <td>@booking.Machine.MachineName</td>
                            <td>@booking.ScheduledDate.ToShortDateString()</td>
                            <td>@booking.Status</td>
                            <td>
                                @if (!booking.IsConfirmed)
                                {
                                    <form asp-action="AcknowledgeBooking" method="post" class="d-inline">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-info btn-sm">Acknowledge</button>
                                    </form>
                                }
                                else if (booking.Status == "Booking Acknowledged")
                                {
                                    <form asp-action="CompleteBooking" method="post" class="d-inline">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-success btn-sm">Complete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
