@model IEnumerable<LawnScheduler.Data.Booking>

@{
    ViewData["Title"] = "Assigned Bookings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Header Styling */
        h2 {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            color: #264653;
            margin: 20px 0;
        }

        /* Table Styling */
        .table {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #2a9d8f;
                color: white;
                font-weight: bold;
                text-align: center;
            }

            .table td {
                vertical-align: middle;
                text-align: center;
            }

        /* Button Styling */
        .btn-info {
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        /* Navigation Links Styling */
        .nav-link {
            color: black !important; /* Change link color to black */
        }

            .nav-link:hover {
                text-decoration: underline; /* Optional: Add underline on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <ul class="nav justify-content-center mb-4 nav-bar-custom">
            <li class="nav-item">
                <a class="nav-link my-bookings" asp-controller="MachineOperator" asp-action="Index">
                    Assigned Bookings
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link my-bookings" asp-controller="MachineOperator" asp-action="RegisterMachine">
                    Register Machine
                </a>
            </li>
        </ul>

        <h2>Assigned Bookings</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                       @*  <th>Booking ID</th> *@
                        <th>Customer Email</th>
                        <th>Machine Name</th>
                        <th>Scheduled Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                         @*    <td>@booking.BookingId</td> *@
                            <td>@ViewBag.CustomerEmails[booking.CustomerId]</td>
                            <td>@booking.Machine.MachineName</td>
                            <td>@booking.ScheduledDate.ToShortDateString()</td>
                            <td>@booking.Status</td>
                            <td>
                                @if (!booking.IsConfirmed)
                                {
                                    <form asp-action="AcknowledgeBooking" method="post" class="d-inline">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-info btn-sm">Acknowledge</button>
                                    </form>
                                }
                                else if (booking.Status == "Booking Acknowledged")
                                {
                                    <form asp-action="CompleteBooking" method="post" class="d-inline">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-success btn-sm">Complete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
