@model IEnumerable<LawnScheduler.Data.Booking>

<h2>My Bookings</h2>

<div class="container">
    <table class="table table-striped table-bordered booking-table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Machine Name</th>
                <th>Scheduled Date</th>
                <th>Status</th>
                <th>Email of Operator</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.Machine.MachineName</td>
                    <td>@booking.ScheduledDate.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    <td>@ViewBag.OperatorEmails[booking.Machine.OperatorId]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Header Style */
    h2 {
        margin: 20px 0;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        color: #264653;
    }

    /* Table Styles */
    .booking-table {
        width: 100%;
        margin-top: 20px;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .booking-table th {
        background-color: #2a9d8f;
        color: #fff;
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    .booking-table td {
        padding: 15px;
        text-align: center;
        font-size: 1rem;
        color: #555;
    }

    /* Alternate Row Colors */
    .booking-table tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .booking-table tbody tr:nth-of-type(even) {
        background-color: #ffffff;
    }

    /* Row Hover Effect */
    .booking-table tbody tr:hover {
        background-color: #e9ecef;
        transform: scale(1.01);
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
    }

    /* Table Borders */
    .booking-table,
    .booking-table th,
    .booking-table td {
        border: 1px solid #dee2e6;
    }
</style>
