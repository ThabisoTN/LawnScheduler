@model IEnumerable<LawnScheduler.Data.Booking>

<h2>My Bookings</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Machine Name</th>
            <th>Scheduled Date</th>
            <th>Status</th>
            <th>Email of oprrator you booked</th> <!-- New column for Operator Email -->
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Machine.MachineName</td>
                <td>@booking.ScheduledDate.ToShortDateString()</td>
                <td>@(booking.Status)</td>
                <td>@ViewBag.OperatorEmails[booking.Machine.OperatorId]</td> <!-- Display Operator Email -->
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        margin-bottom: 20px;
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        color: #333;
    }

    .table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border: 1px solid #dee2e6;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa; /* Light gray for odd rows */
        }

        .table tbody tr:hover {
            background-color: #e9ecef; /* Light gray on hover */
        }
</style>
