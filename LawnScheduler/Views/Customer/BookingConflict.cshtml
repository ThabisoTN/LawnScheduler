@{
    ViewData["Title"] = "Booking Conflict";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="conflict-container">
        <h2>Booking Conflict</h2>
        <p>Unfortunately, the machine you tried to book is already taken for the selected date.</p>
        <p>Your request has been forwarded to the Conflict Manager, and they will resolve the issue shortly.</p>
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Available Machines</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
