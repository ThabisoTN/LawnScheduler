@{
    ViewData["Title"] = "Booking Conflict";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .conflict-container {
            max-width: 600px;
            margin: 50px auto;
            text-align: center;
            padding: 30px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            background-color: #f8d7da; /* Light red background */
            color: #721c24; /* Dark red text */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .conflict-container h2 {
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .conflict-container p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            font-size: 1.2rem;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="conflict-container">
        <h2>Booking Conflict</h2>
        <p>Unfortunately, the machine you tried to book is already taken for the selected date.</p>
        <p>Your request has been forwarded to the Conflict Manager, and they will resolve the issue shortly.</p>
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Available Machines</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
