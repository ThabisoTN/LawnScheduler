@model IEnumerable<LawnScheduler.Data.Machine>

<!-- Navigation List Item for My Bookings -->
<ul class="nav justify-content-center mb-4 nav-bar-custom">
    <li class="nav-item">
        <a class="nav-link my-bookings" asp-controller="Customer" asp-action="MyBookings">
            My Bookings
        </a>
    </li>
</ul>

<h2 class="text-center mb-4">Available Machines</h2>

<div class="container">
    <div class="row">
        @foreach (var machine in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
                <div class="card machine-card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@machine.MachineName</h5>
                        <p class="card-text">@machine.Description</p>
                        <form asp-action="BookMachine" method="post">
                            <input type="hidden" name="machineId" value="@machine.MachineId" />
                            <div class="form-group">
                                <label for="scheduledDate">Booking Date:</label>
                                <input type="date" name="scheduledDate" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary book-button w-100">Book Now</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* General Styles */
    body {
        background-color: #f8f9fa;
    }

    h2 {
        color: #264653;
    }

    /* Navbar Styles */
    .nav-bar-custom {
        background-color: #e9ecef;
        padding: 15px 0;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .nav-link.my-bookings {
        color: #007bff;
        font-weight: bold;
        font-size: 1.1rem;
        padding: 10px 15px;
        border-radius: 0.5rem;
        background-color: #e2e6ea;
        transition: color 0.3s, background-color 0.3s;
    }

    .nav-link.my-bookings:hover {
        color: #0056b3;
        background-color: #d1d8de;
    }

    /* Card Styles */
    .machine-card {
        border: none;
        border-radius: 0.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s ease-in-out;
    }

    .machine-card:hover {
        transform: translateY(-5px);
    }

    .card-title {
        font-size: 1.5rem;
        color: #007bff;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
        margin-bottom: 15px;
    }

    /* Form and Button Styles */
    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .btn-primary {
        background-color: #2a9d8f;
        border-color: #2a9d8f;
        color: white;
        font-size: 1rem;
        border-radius: 0.5rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #21867a;
        border-color: #21867a;
    }
    }
</style>
