@model IEnumerable<LawnScheduler.Data.Machine>

<!-- Navigation List Item for My Bookings -->
<ul class="nav justify-content-center mb-4" style="background-color: #f8f9fa; padding: 15px 0; border-radius: 0.5rem; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
    <li class="nav-item" style="margin: 0 15px;">
        <a class="nav-link my-bookings" asp-controller="Customer" asp-action="MyBookings" 
           style="color: #007bff; font-weight: bold; font-size: 1.1rem; transition: color 0.3s; padding: 10px 15px; border-radius: 0.5rem; background-color: #e2e6ea;">
           My Bookings
        </a>
    </li>
</ul>

<h2 class="text-center">Available Machines</h2>

<div class="container">
    <div class="row">
        @foreach (var machine in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm" style="border-radius: 0.5rem; padding: 20px; border: none;">
                    <h5 class="card-title" style="font-size: 1.5rem; color: #007bff; text-align: center;">@machine.MachineName</h5>
                    <p class="card-text" style="font-size: 1rem; color: #555; text-align: center;">@machine.Description</p>
                    <form asp-action="BookMachine" method="post" style="text-align: center;">
                        <input type="hidden" name="machineId" value="@machine.MachineId" />
                        <div class="form-group">
                            <label for="scheduledDate" style="font-weight: bold;">Booking Date:</label>
                            <input type="date" name="scheduledDate" class="form-control" required style="border-radius: 0.25rem; width: 100%; display: inline-block; margin-top: 5px;" />
                        </div>
                        <button type="submit" class="btn btn-primary" style="border-radius: 0.5rem; width: 100%;">Book Now</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* General Styles */
    body {
        background-color: #f8f9fa; /* Light background */
    }

    h2 {
        margin-bottom: 30px; /* Margin below heading */
    }

    /* Card Styles */
    .card {
        border: none; /* Remove border */
        border-radius: 0.5rem; /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15); /* Card shadow */
        transition: transform 0.2s; /* Animation */
        padding: 20px; /* Padding inside card */
        text-align: center; /* Center text */
    }

    .card:hover {
        transform: scale(1.05); /* Hover effect */
    }

    /* Button Styles */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px; /* Padding for button */
        color: white;
        font-size: 1rem;
        border-radius: 0.5rem; /* Rounded corners */
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
        border-color: #0056b3; /* Darker border on hover */
    }

    /* Additional Responsive Styles */

</style>
